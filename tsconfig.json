{
	"compilerOptions": {
		"target": "ES6",
		"module": "CommonJS",
		"moduleResolution": "node",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"lib": [
			"es2016"
		],
		"allowJs": true,
		"outDir": "./lib",
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": [
		"src",
		"pages"
	],
	"exclude": [
		"pages/stub.js"
	]
}